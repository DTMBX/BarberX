{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://Evident.info/schemas/docket-entry.schema.json",
  "title": "Docket Entry",
  "description": "Schema for validating docket entries in Evident.info legal documentation system",
  "type": "object",
  "required": ["id", "date", "type", "title", "file"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[0-9]{8}-[a-z0-9-]+$",
      "description": "Unique identifier in format YYYYMMDD-slug",
      "examples": ["20250827-motion-to-reopen", "20221009-police-report"]
    },
    "date": {
      "type": "string",
      "format": "date",
      "description": "Filing or document date in ISO 8601 format (YYYY-MM-DD)",
      "examples": ["2025-08-27", "2022-10-09"]
    },
    "type": {
      "type": "string",
      "enum": [
        "Order",
        "Motion",
        "Brief",
        "Filing",
        "Notice",
        "Opinion",
        "Judgment",
        "Subpoena",
        "Summons",
        "Complaint",
        "Answer",
        "Discovery",
        "Exhibit",
        "Transcript",
        "Other"
      ],
      "description": "Document type classification"
    },
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 250,
      "description": "Human-readable document title"
    },
    "file": {
      "type": "string",
      "pattern": "^/assets/cases/[a-z0-9-]+/docket/[a-zA-Z0-9._'-]+\\.pdf$",
      "description": "Path to PDF file (allows legacy formats during migration)"
    },
    "court_stamp": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Court filing timestamp if available"
    },
    "checksum": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash for integrity verification (64 hex chars)"
    },
    "notes": {
      "type": "string",
      "maxLength": 1000,
      "description": "Additional notes or context"
    },
    "intake_date": {
      "type": "string",
      "format": "date-time",
      "description": "When this entry was added to the system"
    },
    "source": {
      "type": "string",
      "enum": ["manual", "ecf", "mail", "fax", "email", "pacer", "scan"],
      "description": "How the document was received"
    },
    "docket_number": {
      "type": "string",
      "description": "Official court docket number if available"
    },
    "page_count": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of pages in document"
    }
  },
  "additionalProperties": false
}
